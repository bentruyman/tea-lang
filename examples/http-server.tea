use print = "std.print"
use http = "std.http"

var hostname = "127.0.0.1"
var port = 3000

var server = http.Server(|req, res| => {
    res.status_code = 200
    res.set_header("Content-Type", "text/plain")
    res.end("Hello World")
})

var err, listen = server.listen(port, hostname, || => {
    print.print("Server running at http://#{hostname}:#{port}/")
})

struct App {
    server: http.Server
  }
