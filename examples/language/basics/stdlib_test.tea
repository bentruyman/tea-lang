# Comprehensive test of Tea-native stdlib modules
# Tests all migrated modules: env, fs, path

use env = "std.env"
use fs = "std.fs"
use path = "std.path"

pub def test_env() -> Void
  @println("=== Testing std.env ===")

  # Test cwd
  @println(env.cwd())

  # Test get - PATH should exist on all systems
  var path_var = env.get("PATH")

  if @len(path_var) > 0
    @println("✓ env.get works - PATH exists")
  end

  # Test set/get
  env.set("TEA_TEST_VAR", "test_value")
  var value = env.get("TEA_TEST_VAR")

  if value == "test_value"
    @println("✓ env.set works")
  end

  # Test vars - just verify it doesn't crash
  env.vars()
  @println("✓ env.vars works")
end

pub def test_path() -> Void
  @println("=== Testing std.path ===")

  # Test join
  var joined = path.join(["usr", "local", "bin"])
  @println(joined)

  # Test basename and dirname
  var file_path = "/usr/local/bin/tea"
  @println(path.basename(file_path))
  @println(path.dirname(file_path))

  # Test extension
  @println(path.extension("script.tea"))

  # Test split
  var parts = path.split("/usr/local/bin")

  if @len(parts) == 3
    @println("✓ path.split works")
  end
end

pub def test_fs() -> Void
  @println("=== Testing std.fs ===")

  # Test create_dir
  var test_dir = "/tmp/tea_test_dir"
  fs.create_dir(test_dir)
  @println("✓ fs.create_dir works")

  # Test write_file and read_file
  var test_file = "/tmp/tea_test_dir/test_file.txt"
  fs.write_file(test_file, "Hello from Tea!")
  var content = fs.read_file(test_file)

  if content == "Hello from Tea!"
    @println("✓ fs.write_file and fs.read_file work")
  end

  # Test read_dir
  var entries = fs.read_dir("/tmp/tea_test_dir")

  if @len(entries) >= 1
    @println("✓ fs.read_dir works")
  end

  # Clean up
  fs.remove(test_file)
  fs.remove(test_dir)
  @println("✓ fs.remove works")
end

# Run all tests
test_env()
test_path()
test_fs()

@println("=== All Stdlib Tests Complete ===")
