# Expect: redirect, fallback

var code = 302
var message = match code
  case 200 => "ok"
  case 301 | 302 => "redirect"
  case _ => "fallback"
end

print(message)

var token = nil
var status = match token
  case nil => "fallback"
  case _ => "value"
end

print(status)

# Exhaustive matches are fine
enum Color {
  Red
  Green
  Blue
}
var color: Color = Color.Red
var output = match color
  case Color.Red => "red"
  case Color.Green => "green"
  case Color.Blue => "blue"
end

print(output)

# Bools are also fine
var bool: Bool = true
output = match bool
  case true => "true"
  case false => "false"
end

print(output)

# `match` can also be used as a statement
# If a case isn't followed by a `=>` then it is assumed what follows is a block of code to be executed
match code
  case 200
    print("ok")
  case 301 | 302
    print("redirect")
  case _
    print("fallback")
end
