# String indexing - accessing individual characters

# Basic indexing
var hello = "hello"
print(hello[0])  # Expect: h
print(hello[1])  # Expect: e
print(hello[4])  # Expect: o

# Indexing with spaces and punctuation
var phrase = "Hello, World!"
print(phrase[0])  # Expect: H
print(phrase[5])  # Expect: ,
print(phrase[6])  # Expect:
print(phrase[7])  # Expect: W

