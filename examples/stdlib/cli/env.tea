# Demonstrates std.env helpers for reading and mutating environment variables.

use env = "std.env"

print("cwd")
print(env.cwd())

print("has PATH")
print(env.has("PATH"))

var sample = env.get_or("TEA_SAMPLE_VAR", "unset")
print("sample value")
print(sample)

env.set("TEA_SAMPLE_VAR", "configured")
print(env.require("TEA_SAMPLE_VAR"))

print("temp dir")
print(env.temp_dir())

print("home dir")
print(env.home_dir())

print("config dir")
print(env.config_dir())

env.unset("TEA_SAMPLE_VAR")
