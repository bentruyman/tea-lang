# Test filesystem operations using intrinsics directly

use intrinsics = "std.intrinsics"

pub def test_fs_operations() -> Void
  print("=== Testing Filesystem Operations ===")

  # Test write and read
  var test_file = "/tmp/tea_fs_test.txt"
  intrinsics.fs_write_text(test_file, "Hello from Tea!")

  var content = intrinsics.fs_read_text(test_file)
  print("Content: " + content)

  # Test exists
  if intrinsics.fs_exists(test_file)
    print("✓ File exists")
  end

  # Test size
  var size = intrinsics.fs_size(test_file)
  print("Size: " + intrinsics.to_string(size))

  # Test is_dir
  if ! intrinsics.fs_is_dir(test_file)
    print("✓ File is not a directory")
  end

  # Test remove
  intrinsics.fs_remove(test_file)

  if ! intrinsics.fs_exists(test_file)
    print("✓ File removed")
  end

  print("=== All filesystem tests passed ===")
end

test_fs_operations()
