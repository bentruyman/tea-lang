{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "tea",
  "displayName": "Tea",
  "scopeName": "source.tea",
  "fileTypes": ["tea"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#template-strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#function-definition" },
    { "include": "#function-call" },
    { "include": "#intrinsic-call" },
    { "include": "#type-annotation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.tea",
      "match": "#.*$"
    },
    "strings": {
      "name": "string.quoted.double.tea",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.tea",
          "match": "\\\\."
        }
      ]
    },
    "template-strings": {
      "name": "string.template.tea",
      "begin": "`",
      "end": "`",
      "patterns": [
        {
          "name": "constant.character.escape.tea",
          "match": "\\\\."
        },
        {
          "name": "meta.template.expression.tea",
          "begin": "\\$\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.begin.tea"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.end.tea"
            }
          },
          "patterns": [{ "include": "$self" }]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tea",
          "match": "\\b\\d+(_\\d+)*\\.\\d+(_\\d+)*\\b"
        },
        {
          "name": "constant.numeric.float.tea",
          "match": "\\.\\d+(_\\d+)*\\b"
        },
        {
          "name": "constant.numeric.integer.tea",
          "match": "\\b\\d+(_\\d+)*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.tea",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.tea",
          "match": "\\bfalse\\b"
        },
        {
          "name": "constant.language.nil.tea",
          "match": "\\bnil\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tea",
          "match": "\\b(if|else|while|for|of|match|case|end|return|break|continue|unless|until)\\b"
        },
        {
          "name": "keyword.declaration.tea",
          "match": "\\b(def|pub|var|const|use)\\b"
        },
        {
          "name": "keyword.type.tea",
          "match": "\\b(struct|enum|union|error)\\b"
        },
        {
          "name": "keyword.control.exception.tea",
          "match": "\\b(try|catch|throw)\\b"
        },
        {
          "name": "keyword.other.tea",
          "match": "\\b(test|is|not|and|or)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.type.builtin.tea",
          "match": "\\b(String|Int|Float|Bool|Void|List|Dict|Func|Any)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.tea",
          "match": "->|=>"
        },
        {
          "name": "keyword.operator.comparison.tea",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.tea",
          "match": "&&|\\|\\|"
        },
        {
          "name": "keyword.operator.assignment.tea",
          "match": "\\+=|-=|\\*=|="
        },
        {
          "name": "keyword.operator.arithmetic.tea",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.error.tea",
          "match": "!"
        }
      ]
    },
    "function-definition": {
      "match": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?:\\[([^\\]]+)\\])?\\s*\\(",
      "captures": {
        "1": { "name": "keyword.declaration.function.tea" },
        "2": { "name": "entity.name.function.tea" },
        "3": { "name": "entity.name.type.parameter.tea" }
      }
    },
    "function-call": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.call.tea" }
      }
    },
    "intrinsic-call": {
      "match": "@([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "support.function.builtin.tea" }
      }
    },
    "type-annotation": {
      "match": ":\\s*([A-Z][a-zA-Z0-9_]*(?:\\[[^\\]]+\\])?)",
      "captures": {
        "1": { "name": "entity.name.type.tea" }
      }
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.constant.tea",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.tea",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
